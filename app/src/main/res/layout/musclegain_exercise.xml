<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="209dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/material_on_surface_disabled"
                    android:src="@drawable/backred"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title">

                </ImageButton>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/bangers"
                    android:text="Muscle Gain "
                    android:textColor="@color/red"
                    android:textSize="40sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Perform the following workout sets according to its respective day numbers"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/day1day4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 1 / DAY 4"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@id/heading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    >

                </TextView>

                <Button
                    android:id="@+id/pushbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:text="Push Exercises"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/day1day4"
                    android:background="@drawable/rounded_edge_button"
                    android:backgroundTint="@color/red"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/day2day5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 2 / DAY 5"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@id/pushbutton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    >

                </TextView>

                <Button
                    android:id="@+id/pullbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:text="Pull Exercises"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/day2day5"
                    android:background="@drawable/rounded_edge_button"
                    android:backgroundTint="@color/red"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/day3day6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 3 / DAY 6"
                    android:textSize="30sp"
                    app:layout_constraintTop_toBottomOf="@id/pullbutton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    >

                </TextView>

                <Button
                    android:id="@+id/legsandcorebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:text="  Leg and core "
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/day3day6"
                    android:background="@drawable/rounded_edge_button"
                    android:backgroundTint="@color/red"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/day7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="DAY 7\nThis is your rest day"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/legsandcorebutton"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginBottom="20dp">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>